@model IEnumerable<Bakari.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<form asp-action="OrderList" method="get">
    <div class="form-actions no-color">
        <p>
            Find by OrderNumber: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
           
            <a asp-action="OrderLsit">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="OrderList" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.OrderDate)</a>
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTotal)
            </td>
            <td>
                <a class="fa fa-cart-arrow-down" aria-hidden="true" asp-route-id="@item.OrderId" asp-action="OrderDiscount"> </a> 
                <a class="fa fa-user-plus" aria-hidden="true" asp-route-id="@item.OrderId" asp-action="OrderCustomer"> </a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
