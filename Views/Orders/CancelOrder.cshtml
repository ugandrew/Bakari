@model IEnumerable<Bakari.Models.OrderDetail>

@{
    ViewData["Title"] = "CancelOrder";
    int orderid = ViewBag.orderid;

    
}

<h3>Are you sure you want to cancel order?</h3>
<div>
    <h2>Order</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @ViewBag.orderDate
        </dd>
        <dt class="col-sm-2">
            Order Number
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ordernumber
        </dd>
    
        <dt class="col-sm-2">
            Sub Total
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ordersubtotal
        </dd>
        <dt class="col-sm-2">
            Discount
        </dt>
        <dd class="col-sm-10">
            @ViewBag.orderdiscount
        </dd>
   

        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ordertotal
        </dd>
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @ViewBag.customer
        </dd>
      
    </dl>
</div>
<div>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Item)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
               
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
               
            </tr>
        }   
        
        </tbody>
</table>
    <form asp-action="CancelOrder">
        <input type="hidden" asp-route-id="orderid" />
        <input type="submit" value="Cancel" class="btn btn-danger" /> |
        <a asp-action="OrderList">Back to List</a>
    </form>


</div>